<% layout('layouts/boilerplateAdmin')%>

<div class="row">
  <div class="col-6 offset-3">
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title"><%= user.lastname.toUpperCase() %> <%= user.firstname %></h5>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">Mail : <%= user.email %></li>
        <li class="list-group-item text-muted">Password : <%= user.password %></li>
      </ul>
      <div class="card-body">
        <form class="d-inline" action="/" method="POST">
          <button class="btn btn-danger">Delete</button>
        </form>
      </div>
      <div class="card-footer text-muted">2 days ago</div>
    </div>
  </div>
</div>
